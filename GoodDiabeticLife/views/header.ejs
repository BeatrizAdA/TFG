<div class="header">
    <div class="row align-items-center">
        <div class="col col-lg-3 col-md-3 col-sm-3">
            <a href="/main" class="formato_enlace"><h1>GoodDiabeticLife</h1></a>
        </div>
        <div class="col col-lg-1 col-md-1 col-sm-1 offset-lg-5 offset-md-4 offset-sm-4 text-center">
            <img src="/image/<%=user_data[0].id%>" width="50%" class="format_img mt-2">
        </div>
        <div class="col col-lg-2 col-md-2 col-sm-2 text-center">
            <a href="/user_profile" class="formato_enlace"><%=user_data[0].full_name%></a>
        </div>
        <div class="col col-lg-1 col-md-1 col-md-1 text-center">
            <a type="button" class="btn btn-warning mt-3" href="/sign_off">Salir</a>
        </div>
    </div>
    <div class="row mt-3 align-items-center">
        <% if(!user_data[0].is_doctor){ %>
            <div class="col col-lg-2 col-md-2 col-sm-2 text-center">
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Comida</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/main/new_food?meal=breakfast">Desayuno</a></li>
                        <li><a class="dropdown-item" href="/main/new_food?meal=lunch">Comida</a></li>
                        <li><a class="dropdown-item" href="/main/new_food?meal=dinner">Cena</a></li>
                        <li><a class="dropdown-item" href="/main/new_food?meal=other">Otra</a></li>
                    </ul>
                </div>
            </div>
            <div class="col col-lg-2 col-md-2 col-sm-2 text-center">
                <div class="dropdown">
                    <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Glucemia</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/main/new_blood_sugar?blood_sugar=before_food">Antes de comer</a></li>
                        <li><a class="dropdown-item" href="/main/new_blood_sugar?blood_sugar=after_food">Después de comer</a></li>
                        <li><a class="dropdown-item" href="/main/new_blood_sugar?blood_sugar=before_sport">Antes de deporte</a></li>
                        <li><a class="dropdown-item" href="/main/new_blood_sugar?blood_sugar=other">Otra</a></li>
                    </ul>
                </div>
            </div>
            <div class="col col-lg-2 col-md-2 col-sm-2 text-center">
                <a type="button" class="btn btn-warning" href="/main/new_sport">Deporte</a>
            </div>
        <% } %>
        <% if(show_graphic_button){ %>
            <div class="col col-lg-2 col-md-2 col-sm-2 text-center">
                <form method="GET" action="/main/graphic">
                    <div class="dropdown">
                        <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Gráfico</button>
                        <ul class="dropdown-menu">
                            <input type="date" id="start_date" name="start_date">
                            <input type="date" id="end_date" name="end_date">
                            <button id="submit">Aceptar</button>
                        </ul>
                    </div>
                </form>
            </div>
        <% } %>
        <div class="col col-lg-2 col-md-1 col-sm-1 text-center">
            <a type="button" class="btn btn-warning" href="/main/ration_table">Tabla raciones</a>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
        <% if(user_data[0].is_doctor){ %>
            <div class="col col-lg-4 col-md-5 col-sm-6 offset-lg-3 offset-md-3 offset-sm-2 text-end">
                <form method="GET" action="/main/search">
                    <input type="text" name="text_search">
                    <button type="submit" class="btn btn-warning">Buscar</button>
                </form>
            </div>
        <% } %>
    </div>
</div>