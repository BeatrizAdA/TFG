<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <link rel="icon" href="/images/favicon.PNG" />
        <title>GoodDiabeticLife</title>
    </head>
    <body>
        <div class="container-fluid">
            <%- include("header") %>
            <div class="cuerpo mb-5">
                <% if(medico){ %>
                    <% information.forEach(element => { %>
                        <div class="box_main mt-3 mb-4">
                            <div class="row align-items-center justify-content-center m-3">
                                <div class="col col-3 text-center">
                                    <%= element.date %>
                                </div>
                                <div class="col col-6 text-center">
                                    <%= element.full_name %>
                                </div>
                                <div class="col col-3 text-center">
                                    <a type="button" class="btn btn-warning" href="/main/information/<%= element.id %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
                <% if(patient_doctor){ %>
                    <% information.forEach(element => { %>
                        <div class="box_main mt-3">
                            <div class="row align-items-center justify-content-center m-3">
                                <div class="col col-3">
                                    <%= element.full_name %>
                                </div>
                                <div class="col col-1">
                                    <a type="button" class="btn btn-warning" href="/main/search_patient/<%= element.full_name %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                        </svg>
                                    </a>
                                </div>
                                <div class="col col-1 offset-1">
                                    <form method="POST" action="/main/patient_doctor/<%= element.full_name %>">
                                        <button class="btn btn-warning">Guardar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
                <% if(busqueda){ %>
                    <% information.forEach(element => { %>
                        <div class="box_main mt-3 mb-4">
                            <div class="row align-items-center justify-content-center m-3">
                                <div class="col col-3">
                                    <%= element.full_name %>
                                </div>
                                <div class="col col-1">
                                    <a type="button" class="btn btn-warning" href="/main/search_patient/<%= element.full_name %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                                        </svg>
                                    </a>
                                </div>
                                <div class="col col-1 offset-1">
                                    <form method="POST" action="/main/patient_doctor/<%= element.full_name %>">
                                        <button class="btn btn-warning">Guardar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </body>
</html>